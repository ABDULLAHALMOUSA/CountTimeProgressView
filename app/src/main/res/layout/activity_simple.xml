<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.sfyc.ctpv.CountTimeProgressView
            android:id="@+id/countTimeProgressView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            />

        <LinearLayout style="@style/Linear_common">

            <TextView
                style="@style/TextView_left"
                android:text="Shape Type:" />

            <TextView
                android:id="@+id/tv_countTime_style"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:text="Click me to change countTime style"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <LinearLayout style="@style/Linear_common">

            <TextView
                style="@style/TextView_left"
                android:text="Count Time:" />

            <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                android:id="@+id/seek_bar_countTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:dsb_indicatorColor="@color/colorPrimary"
                app:dsb_max="100"
                app:dsb_min="1"
                app:dsb_progressColor="@color/colorPrimary"
                app:dsb_value="6" />
        </LinearLayout>

        <LinearLayout style="@style/Linear_common">

            <TextView
                style="@style/TextView_left"
                android:text="Start Angle:" />

            <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                android:id="@+id/seek_bar_start_angle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:dsb_indicatorColor="@color/colorPrimary"
                app:dsb_max="360"
                app:dsb_min="0"
                app:dsb_progressColor="@color/colorPrimary"
                app:dsb_value="0" />
        </LinearLayout>
        <LinearLayout style="@style/Linear_common"
            android:layout_height="64dp">

            <TextView
                style="@style/TextView_left"
                android:text="Ball Flag" />

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/sb_ball_flag"
                android:layout_marginLeft="24dp"
                style="@style/SwitchButtonStyleMD"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout style="@style/Linear_common"
            android:layout_height="64dp">

            <TextView
                style="@style/TextView_left"
                android:text="Clockwise" />

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/sb_clockwise"
                android:layout_marginLeft="24dp"
                style="@style/SwitchButtonStyleMD"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout style="@style/Linear_common">

            <TextView
                style="@style/TextView_left"
                android:text="Ball Width" />

            <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                android:id="@+id/seekbar_ball_width"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:dsb_indicatorColor="@color/colorPrimary"
                app:dsb_max="100"
                app:dsb_min="0"
                app:dsb_progressColor="@color/colorPrimary"
                app:dsb_value="10" />
        </LinearLayout>

        <LinearLayout style="@style/Linear_common">

            <TextView
                style="@style/TextView_left"
                android:text="Ball Color:" />

            <com.larswerkman.lobsterpicker.sliders.LobsterShadeSlider
                android:id="@+id/shadeslider_ball_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout style="@style/Linear_common">

            <TextView
                style="@style/TextView_left"
                android:text="Border Width" />

            <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                android:id="@+id/seekbar_border_width"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:dsb_indicatorColor="@color/colorPrimary"
                app:dsb_max="100"
                app:dsb_min="0"
                app:dsb_progressColor="@color/colorPrimary"
                app:dsb_value="10" />
        </LinearLayout>

        <LinearLayout style="@style/Linear_common">

            <TextView
                style="@style/TextView_left"
                android:text="Bottom Color:" />

            <com.larswerkman.lobsterpicker.sliders.LobsterShadeSlider
                android:id="@+id/shadeslider_bottom_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout style="@style/Linear_common">

            <TextView
                style="@style/TextView_left"
                android:text="Draw Color:" />

            <com.larswerkman.lobsterpicker.sliders.LobsterShadeSlider
                android:id="@+id/shadeslider_draw_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               />
        </LinearLayout>

        <LinearLayout style="@style/Linear_common">

            <TextView
                style="@style/TextView_left"
                android:text="Background Color:" />

            <com.larswerkman.lobsterpicker.sliders.LobsterShadeSlider
                android:id="@+id/shadeslider_bg_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
